# Remote host ports
POSTGRES_HOST_PORT=5432
BACKEND_HOST_PORT=8080
FRONTEND_HOST_PORT=80

# Database
POSTGRES_DB=ecommerce_demo
DB_USERNAME=postgres
DB_PASSWORD=replace-with-strong-password
DB_URL=jdbc:postgresql://postgres:5432/ecommerce_demo

# JWT (must be at least 64 bytes for HS512)
JWT_SECRET=replace-with-64-byte-min-secret-replace-with-64-byte-min-secret-123
JWT_EXPIRATION=86400

# Optional login abuse protection tuning
SECURITY_LOGIN_MAX_ATTEMPTS=5
SECURITY_LOGIN_FAILURE_WINDOW_SECONDS=300
SECURITY_LOGIN_BLOCK_DURATION_SECONDS=900
